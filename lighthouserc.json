{
  "ci": {
    "collect": {
      "url": ["http://localhost:8080/"],
      "staticDistDir": "./out",
      "numberOfRuns": 2,
      "settings": { "preset": "desktop" }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.90 }],
        "categories:accessibility": ["warn", { "minScore": 0.95 }]
      }
    }
  }
}
